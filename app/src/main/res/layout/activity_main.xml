<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.goku.game.MainActivity">

    <TextView
        android:text="Guess the Word.....?"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:id="@+id/textView"
        android:layout_alignEnd="@+id/reset" />


    <Button
        android:text="Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="12dp"
        android:id="@+id/reset"
        android:layout_alignTop="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:text="submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_marginBottom="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Level 1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/image2"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/a1_sand"
        android:layout_marginLeft="33dp"
        android:id="@+id/image1"
        android:layout_below="@+id/level"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/b1_witch"
        android:layout_marginLeft="16dp"
        android:id="@+id/image2"

        android:layout_alignTop="@+id/image1"
        android:layout_alignEnd="@+id/input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/input"
        android:layout_marginBottom="31dp"
        android:hint="Guess word"
        android:layout_above="@+id/reset"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
